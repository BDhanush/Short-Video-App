<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Profile picture -->
    <ImageView
        android:id="@+id/commentProfilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- Commenter's username -->
    <TextView
        android:id="@+id/commentUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/commentProfilePicture"
        app:layout_constraintTop_toTopOf="@+id/commentProfilePicture"
        app:layout_constraintBottom_toTopOf="@+id/commentText"
        android:layout_marginStart="8dp" />

    <!-- Comment text -->
    <TextView
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="This is a comment."
        app:layout_constraintBottom_toTopOf="@+id/commentTimestamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commentProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/commentProfilePicture" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/commentTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hour ago"
        app:layout_constraintStart_toEndOf="@+id/commentProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/commentText"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
